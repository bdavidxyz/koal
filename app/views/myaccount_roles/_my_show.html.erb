<div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 dark:border-gray-800 rounded-md lg:p-10">
  <div class="sm:flex items-center justify-between mb-8">
    <h1 class="flex-1 text-2xl font-bold -tracking-wide">Role: <%= @role.name %></h1>
    <div class="flex gap-2">
      <%= link_to "Edit", myaccount_role_edit_path(@role.name), class: "cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2" %>
      <%= link_to "Delete", myaccount_role_destroy_path(@role.name), method: :delete, data: { confirm: "Are you sure? This will remove the role from all users." }, class: "cursor-pointer text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-md text-sm px-5 py-2" %>
      <%= link_to "Back to roles", myaccount_role_list_path, class: "inline-flex items-center justify-center leading-4.5 cursor-pointer text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-md text-sm px-5 py-2" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-gray-50 p-4 rounded-md">
      <h3 class="text-sm font-medium text-gray-900 mb-2">Role Name</h3>
      <p class="text-lg"><%= @role.name %></p>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md">
      <h3 class="text-sm font-medium text-gray-900 mb-2">Number of Assignees</h3>
      <p class="text-lg"><%= @role.assignees_count %></p>
    </div>
  </div>

  <% if @assignees.any? %>
    <div class="mt-8">
      <h2 class="text-xl font-bold mb-4">Users with this role</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">ID</th>
              <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Email</th>
              <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @assignees.each do |user| %>
              <tr>
                <td class="py-2 text-xs pl-6"><%= user.id %></td>
                <td class="py-2 text-xs pl-6"><%= user.email %></td>
                <td class="py-2 text-xs pl-4">
                  <% if defined?(myaccount_user_show_path) %>
                    <%= link_to "View user", myaccount_user_show_path(user.slug || user.id), class: "cursor-pointer text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-md text-sm px-3 py-1 mt-2 mb-2 md:mt-0 md:mb-0" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="mt-8 text-center py-8 bg-gray-50 rounded-md">
      <p class="text-gray-500">No users have been assigned this role yet.</p>
    </div>
  <% end %>
</div>