<header id="header" up-hungry class="border-b border-b-gray-200 shadow-[0_1px_2px_#0000000d] ">
  <div class="mx-auto px-8 pt-2 pb-2">
    <nav class="up_hamburger flex flex-wrap items-center justify-between w-full py-4 md:py-0 text-lg text-neutral-700 bg-white">
      <div>
        <a class="text-primary text-2xl font-bold" href="/"><%= render 'shared/brand_logo' %></a>
      </div>
      <div id="menu-icon" class="cursor-pointer md:hidden block">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </div>
      <div class="hidden w-full md:flex md:items-center md:w-auto" id="menu">
        <ul class="pt-4 text-sm text-neutral-700 md:flex md:justify-between md:pt-0">
          <li><a class="md:p-4 py-2 block hover:text-primary font-base" href="#">Features</a></li>
          <li><a class="md:p-4 py-2 block hover:text-primary font-base" href="#">Pricing</a></li>
          <li><a class="md:p-4 py-2 block hover:text-primary font-base" href="#">Customers</a></li>
          <li><a class="md:p-4 py-2 block hover:text-primary font-base" href="/blogposts">Blog</a></li>
          <% if Current&.user&.email&.present? %>
            <li class="flex items-center justify-start md:justify-center md:ms-4"><a class="cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2" href="/myaccount">My account</a></li>
          <% else %>
            <li class="flex items-center justify-start md:justify-center"><a class="cursor-pointer text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-md text-sm px-5 py-2 md:ms-4 md:me-2 mt-2 mb-2 md:mt-0 md:mb-0" href="/sign_in">Log in</a></li>
            <li class="flex items-center justify-start md:justify-center"><a class="cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2" href="/sign_up">Sign Up</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
