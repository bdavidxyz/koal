<% klass = !display_mobile ? "hidden md:flex justify-center items-center" : "flex md:hidden justify-center items-center" %>
<% if Current&.user&.email&.present? %>
  <div class="<%= klass %>">
    <div class="mr-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0"></path>
      </svg>
    </div>
    <div class="relative inline-block text-left">
      <button id="avatarButton" class="cursor-pointer flex items-center justify-center w-8 h-8 rounded-full bg-gray-200 hover:ring-2 hover:ring-blue-500 focus:outline-none">
        <img src="/img/avatardefault.svg" alt="Avatar" class="rounded-full" />
      </button>
      <div id="dropdownMenu" class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg z-50">
        <a href="/myaccount" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">My Account</a>
        <button id="logoutBtn" class="cursor-pointer w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</button>
      </div>
    </div>
  </div>
<% else %>
  <li><a class="md:p-4 py-2 block hover:text-primary font-medium" href="/sign_in">Log in</a></li>
  <li><a class="md:p-4 py-2 block hover:text-primary font-medium" href="/sign_up">Sign Up</a></li>
<% end %>