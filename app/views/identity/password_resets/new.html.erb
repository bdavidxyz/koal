<section class="pt-12 bg-gray-50">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-autolg:py-0">
    <div class="pb-8 font-bold">
      <%= render 'shared/brand_logo' %>
    </div>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 mb-96">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-neutral-700 md:text-2xl mb-0">
          Forgot your password?
        </h1>
        <%= form_with(url: identity_password_reset_path) do |form| %>
          <div class="mt-4">
            <%= form.label :email, class: "block font-medium text-sm text-gray-700" %>
            <%= form.email_field :email, required: true, autofocus: true, class: "placeholder:text-sm placeholder:font-base placeholder:text-neutral-500 shadow-[0_1px_2px_#0000000d] border border-gray-300 text-neutral-700 rounded-md focus:border-2 focus:border-primary-400 focus:outline-none w-92 py-1 px-3" %>
          </div>
          <div class="mt-6">
            <%= form.submit "Send password reset email", class: "cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
