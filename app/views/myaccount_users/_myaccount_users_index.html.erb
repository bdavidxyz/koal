<div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 dark:border-gray-800 rounded-md lg:p-10">
  <div class="sm:flex items-center justify-between mb-3">
    <h1 class="flex-1 text-2xl font-bold -tracking-wide">Users</h1>
  </div>
  <div class="">
    Here are the users
  </div>
  <div class="">
    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr>
          <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Action</th>
          <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Email</th>
          <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Verified?</th>
          <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Created At</th>
          <th scope="col" class="px-6 py-3 text-start text-sm font-bold bg-gray-100">Updated At</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "Edit", edit_myaccount_user_path(user.slug), class: "px-2 py-2 mx-1 text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm" %></td>
            <td><%= user.email %></td>
            <td><%= user.verified %></td>
            <td class="text-xs">
              <div><%= user.created_at.strftime('%-d %b %Y') %></div>
              <div><%= user.created_at.strftime('%H:%M:%S') %></div>
            </td>
            <td class="text-xs">
              <div><%= user.updated_at.strftime('%-d %b %Y') %></div>
              <div><%= user.updated_at.strftime('%H:%M:%S') %></div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>