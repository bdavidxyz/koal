<div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 dark:border-gray-800 rounded-md lg:p-10">
  <div class="sm:flex items-center justify-between mb-8">
    <h1 class="flex-1 text-2xl font-bold -tracking-wide">Show <%= params[:slug] %></h1>
  </div>
  <div class="">
    <div class="border border-gray-200 rounded-lg overflow-hidden my-8">
      <div class="table-scroll">
        <table class="min-w-full divide-y divide-gray-200">
          <tbody>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64">Id</th>
              <td class="px-4 py-4 text-sm font-base text-gray-800"><%= @user.id %></td>
            </tr>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64 border-t border-solid border-gray-200">Slug</th>
              <td class="px-4 border-t border-solid border-gray-200 py-4 text-sm font-base text-gray-800"><%= @user.slug %></td>
            </tr>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64 border-t border-solid border-gray-200">Name</th>
              <td class="px-4 border-t border-solid border-gray-200 py-4 text-sm font-base text-gray-800"><%= @user.name %></td>
            </tr>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64 border-t border-solid border-gray-200">Verified</th>
              <td class="px-4 border-t border-solid border-gray-200 py-4 text-sm font-base text-gray-800"><%= @user.verified %></td>
            </tr>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64 border-t border-solid border-gray-200">Email</th>
              <td class="px-4 border-t border-solid border-gray-200 py-4 text-sm font-base text-gray-800"><%= @user.email %></td>
            </tr>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64 border-t border-solid border-gray-200">Created At</th>
              <td class="px-4 border-t border-solid border-gray-200 py-4 text-sm font-base text-gray-800"><%= @user.created_at.strftime('%Y-%m-%d %H:%M:%S UTC') %></td>
            </tr>
            <tr>
              <th class="px-6 py-3 text-start text-sm font-bold bg-gray-100 w-64 border-t border-solid border-gray-200">Updated At</th>
              <td class="px-4 border-t border-solid border-gray-200 py-4 text-sm font-base text-gray-800"><%= @user.updated_at.strftime('%Y-%m-%d %H:%M:%S UTC') %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-start">
    <div class="">
      <%= link_to "Back to users", myaccount_user_list_path, class: "inline-flex items-center justify-center leading-4.5 cursor-pointer text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-md text-sm px-5 py-2 md:ms-2 md:me-2 mt-2 mb-2 md:mt-0 md:mb-0" %>
    </div>
    <div class="">
      <%= link_to "Edit this user", myaccount_user_edit_path, class: "inline-flex items-center justify-center leading-4.5 cursor-pointer text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-md text-sm px-5 py-2 md:ms-2 md:me-2 mt-2 mb-2 md:mt-0 md:mb-0" %>
    </div>
    <div class="ml-2">
      <%= button_to "Delete", myaccount_user_destroy_path(@user.slug), method: :delete, class: "cursor-pointer leading-4.5 text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-md text-sm px-5 py-2 text-center", form: { "up-confirm": "!! This will definetely remove the item. Are you sure?" } %>
    </div>
  </div>
</div>