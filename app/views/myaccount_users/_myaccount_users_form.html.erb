<div class="m-4">
  <%= form_with model: target_user, url: target_url, method: target_method, html: { 'up-submit': true } do |form| %>
    <% if target_user.errors.any? %>
      <div class="formerrors">
        <p><strong><%= pluralize(target_user.errors.count, "error") %> prevented the form from being saved</strong></p>
        <ul class="list-disc pl-6">
          <% target_user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group mt-3">
      <%= form.label :email, "Email", class: "font-semibold text-sm" %>
      <%= form.text_field :email, class: "w-full appearance-none bg-[#fff] rounded-[.375rem] [box-shadow:inset_0_0_0_1px_#9ca3af] leading-[1.85rem] px-[.75rem] py-[.375rem]", value: target_user.email %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :verified, "Verified", class: "font-semibold text-sm" %>
      <div class="w-full">
        <%= form.check_box :verified, value: target_user.verified, class: "cursor-pointer" %>
      </div>
    </div>
    <div class="form-actions mt-6">
      <%= form.submit target_submit, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none cursor-pointer" %>
      <%= link_to "Cancel", myaccount_users_path, class: "ml-4 font-medium text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
